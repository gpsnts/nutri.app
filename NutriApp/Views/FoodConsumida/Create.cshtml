@model NutriApp.Models.FoodConsumida

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FoodConsumida</h4>
<hr />

<div class="container-fluid">
    <div class="col-auto">

        <div class="container-fluid">
            <div class="table-responsive">            
                    <table class="table table-hover bg-secondary border-dark">
                <thead>
                    <tr >
                         <th>
                @Html.DisplayNameFor(model => model.food.Id)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.food.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.proteinas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.gordurasTotais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.carboidrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.calico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.ferro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.fosforo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.vitaminaA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.valorEnergetico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food.porcao)
            </th>
            <th></th>
        </tr>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaDeAlimentos)
                    {
                        <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.proteinas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gordurasTotais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.carboidrato)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.calico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ferro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fosforo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vitaminaA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.valorEnergetico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.porcao)
                        </td>                      
                        </tr>
                    }
                </tbody>
            </table>     
            </div>
            </div>
            
    </div>
</div>

<div class="container-fluid">
<div class="row">

    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="idAlimentacao" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idFood" class="control-label"></label>
                <input asp-for="idFood" class="form-control" />
                <span asp-validation-for="idFood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidade" class="control-label"></label>
                <input asp-for="quantidade" class="form-control" />
                <span asp-validation-for="quantidade" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group">
                    <input type="submit" asp-action="Create" value="Cadastrar alimento" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 <hr/>
<div>
    <a class="btn-light" asp-controller="Alimentacao" asp-action="Index">Voltar para alimentações</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
